                    alert('请输入控件名称');
                    return false;
                }
                if ($G('txtMax').value !== '' && $G('txtMin').value !== '' && new Date($G('txtMax').value) < new Date($G('txtMin').value)) {
                    alert('最大值应该大于最小值！');

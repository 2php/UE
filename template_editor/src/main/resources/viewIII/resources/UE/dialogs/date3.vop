                    READONLY: 0,
                    RULE: $G('txtRuleList').value,
                    CONN_TEMPLATE_VER_ID: combogrid.getValue(),
                    CONNCODE: $G('selectCode').value,
                    TEXT_COLOR: $G('txtCOLOR').value
                };
                if ($G('txtREQUIRED').checked) {

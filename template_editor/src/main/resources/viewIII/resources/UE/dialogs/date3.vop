                    MAX: (_max || _max != "undefined")? _max : "",
                    MIN: (_min || _min != "undefined")? _min : "",
                    FORMAT:(_format || _format != "undefined")? _format : "",
                    VALUE: $G('txtVALUE').value,
                    LABEL: $G('labelVALUE').value,
